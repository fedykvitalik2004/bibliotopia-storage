<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN"
        "https://checkstyle.org/dtds/suppressions_1_0.dtd">

<suppressions>
    <suppress files="." checks="AbbreviationAsWordInName"/>
    <suppress files="BootApplication.java" checks="MissingJavadocType"/>
    <suppress files=".*Test.java" checks="JavadocMethod"/>
    <suppress files=".*IT.java" checks="JavadocMethod"/>
    <suppress files="." checks="LineLength"/>
    <suppress files=".*Controller" checks="ParameterName"/>
    <suppress files=".*Impl.java" checks="MissingJavadocType"/>
    <suppress files=".*Impl.java" checks="MissingJavadocMethod"/>
    <suppress files=".model.*" checks="MissingJavadocType" />
    <suppress files=".infrastructure.*Mapper.java" checks="MissingJavadocType" />
    <suppress files=".infrastructure.*Entity.java" checks="MissingJavadocType" />
</suppressions>